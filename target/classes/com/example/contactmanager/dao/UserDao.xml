<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.contactmanager.dao.UserDao">
    <insert id="registerUser" parameterType="com.example.contactmanager.entity.User">
        INSERT INTO users (username, password)
        VALUES (#{username}, #{password})
    </insert>
    <select id="loginUser" resultType="com.example.contactmanager.entity.User">
        SELECT * FROM users WHERE username = #{username} AND password = #{password}
    </select>
</mapper>